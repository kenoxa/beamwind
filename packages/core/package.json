{
  "name": "@beamwind/core",
  "version": "2.0.0",
  "description": "compiles tailwind like shorthand syntax into css at runtime",
  "keywords": [
    "beamwind",
    "tailwind"
  ],
  "homepage": "https://github.com/kenoxa/beamwind#readme",
  "bugs": {
    "url": "https://github.com/kenoxa/beamwind/issues"
  },
  "repository": {
    "type": "git",
