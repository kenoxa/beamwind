  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.6.0",
    "nps": "^5.9.12",
    "size-limit": "^4.6.0",
    "typedoc": "0.17.0-3",
    "typedoc-plugin-markdown": "^3.0.11"
  },
  "publishConfig": {
    "access": "public"
  },
  "size-limit": [
    {
      "path": "dist/esnext/colors.js",
